<Application
    x:Class="library_accounting_system.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:library_accounting_system"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ControlButtons.xaml" />

                <ResourceDictionary Source="Resources/LangRU.xaml" />
                <ResourceDictionary Source="Resources/LangEN.xaml" />

                <ResourceDictionary Source="Resources/ThemeDARK.xaml" />
                <ResourceDictionary Source="Resources/ThemeLIGHT.xaml" />


                <ResourceDictionary>
                    <local:ViewModelLocator x:Key="VmLocator" />
                </ResourceDictionary>

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
