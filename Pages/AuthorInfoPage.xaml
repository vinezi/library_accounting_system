<Page
    x:Class="library_accounting_system.Pages.AuthorInfoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:library_accounting_system.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AuthorInfoPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    DataContext="{Binding Source={StaticResource VmLocator}, Path=AuthorInfoPageViewModel}"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*" />
            <ColumnDefinition Width="30*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="56*" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="173*" />
            <RowDefinition Height="197*" />
        </Grid.RowDefinitions>

        <Image Grid.Row="2" Source="aut.png" />
        <TextBlock
            Style="{DynamicResource TextBlockStyle}"
            Grid.Row="1"
            Grid.Column="1"
            FontSize="24"
            Text="Author Name" />
        <TextBlock
            Style="{DynamicResource TextBlockStyle}"
            Grid.Row="2"
            FontSize="20"
            Grid.RowSpan="2"
            Grid.Column="1"
            Text="very big opisanie" />

    </Grid>
</Page>
